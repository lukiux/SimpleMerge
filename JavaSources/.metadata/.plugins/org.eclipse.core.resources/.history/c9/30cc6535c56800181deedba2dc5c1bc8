package project17;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JTextArea;

public class Edit implements ActionListener {
	private JTextArea leftArea;
	private JTextArea rightArea;
	
	public Edit(JTextArea left, JTextArea right) {
		this.leftArea = left;
		this.rightArea = right;
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		
		if (leftArea.isEditable() && rightArea.isEditable()) {leftArea.setEditable(false); rightArea.setEditable(false);}
		else if (leftArea.isEditable()) leftArea.setEditable(false);
		else if (rightArea.isEditable()) rightArea.setEditable(false);
		else leftArea.setEditable(true); rightArea.setEditable(true);
		}		
	}	
}
