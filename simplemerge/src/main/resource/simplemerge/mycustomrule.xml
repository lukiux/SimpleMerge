		<rule name="PMDDetector" language="java" 
		message="Avoid using 'while' statements without curly braces" class="PMDDetector">
		<priority>1</priority>

		<example>
			<![CDATA[
				public void doSomething() {
					while (true)
					x++;
				}
			]]>
		</example>
